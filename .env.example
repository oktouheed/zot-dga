# Environment Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_PATH=./data/zot-dga.db

# JWT Secret (Change this in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# File Storage
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=50MB
ALLOWED_IMAGE_TYPES=jpeg,jpg,png,gif,webp,svg
ALLOWED_VIDEO_TYPES=mp4,avi,mov,wmv,flv,webm

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Image Processing
DEFAULT_IMAGE_QUALITY=80
MAX_IMAGE_WIDTH=2048
MAX_IMAGE_HEIGHT=2048

# Video Processing (requires FFmpeg installed)
ENABLE_VIDEO_PROCESSING=true
VIDEO_THUMBNAIL_TIME=00:00:01

# Admin Default User (for initial setup)
ADMIN_EMAIL=admin@zot-dga.com
ADMIN_PASSWORD=admin123
